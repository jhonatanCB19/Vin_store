<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongratsBottomSheet"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/yeon_sung"
            android:text="Gracias por tu Compra"
            android:textAlignment="center"
            android:textColor="@color/Color_texto1"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/baseline_beenhere_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/gohomeshape"
            android:textAllCaps="false"

            android:id="@+id/goHome"
            android:layout_gravity="center"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:fontFamily="@font/yeon_sung"
            android:textSize="20dp"
            android:text="Devolverse" />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>