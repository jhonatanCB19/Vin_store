        android:fontFamily="@font/acme"
        android:text="desing By\nJhonatan Cortes"
        android:textAlignment="center"
        android:textColor="@color/Color_texto1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
